{
    "name": "@conterra/reactivity-core",
    "type": "module",
    "version": "0.1.0",
    "license": "Apache-2.0",
    "description": "Framework agnostic library for building reactive applications.",
    "repository": {
        "type": "git",
        "url": "https://github.com/conterra/reactivity",
        "directory": "packages/reactivity-core"
    },
    "files": [
        "README.md",
        "CHANGELOG.md",
        "LICENSE",
        "package.json",
        "dist/**"
    ],
    "exports": {
        ".": {
            "import": "./dist/index.js",
            "types": "./dist/index.d.ts"
        },
        "./package.json": "./package.json"
    },
    "scripts": {
        "clean": "rimraf dist",
        "build": "tsc -p tsconfig.prod.json",
        "dev": "tsc -p tsconfig.prod.json -w --preserveWatchOutput",
        "test": "vitest"
    },
    "dependencies": {
        "@preact/signals-core": "^1.6.0"
    },
    "devDependencies": {
        "project-root": "workspace:*"
    },
    "publishConfig": {
        "access": "public"
    }
}
